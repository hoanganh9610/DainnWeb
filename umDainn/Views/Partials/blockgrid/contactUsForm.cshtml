@using PageBuilder.Core.Controllers
@using PageBuilder.Core.Models
@inherits UmbracoViewPage<ContactUsFormModel>
<form class="mt-3" asp-controller="@nameof(FormsDataController).Replace("Controller", "")" asp-action="@nameof(FormsDataController.ContactUsFormSubmit)"
      data-ajax="true" data-ajax-method="POST" data-ajax-failure="submitFailure" data-ajax-begin="submitBegin" data-ajax-success="submitSuccess">
    <div class="mb-3">
        <input asp-for="FormName" type="hidden">
        <input asp-for="SiteId" type="hidden">
        <input asp-for="FullName" class="form-control">
        <span asp-validation-for="FullName" class="lead-sm text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Company" class="form-control">
        <span asp-validation-for="Company" class="lead-sm text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="lead-sm text-danger"></span>
    </div>
    <div class="mb-3">
        <textarea asp-for="Message" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Message" class="lead-sm text-danger"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary d-flex align-items-center justify-content-center" type="submit" style="min-width: 180px;">
            <span class="js-submit-init">
                Submit
            </span>
            <span class="js-submit-busy spinner-border spinner-border-sm position-absolute" style="display: none;" aria-hidden="true"></span>
        </button>
        <span class="submit-message js-submit-message-success text-success lead-sm" style="display: none;">Success!</span>
        <span class="submit-message js-submit-message-failure text-danger lead-sm" style="display: none;">Failed!</span>
    </div>
</form>